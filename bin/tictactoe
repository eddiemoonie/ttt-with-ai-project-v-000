#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe"
tic_tac_toe = Game.new
until tic_tac_toe.won?
  tic_tac_toe.play
end

new_game = ""
until new_game == "no"
  puts "Would you like to start a new game?"
  new_game = gets.strip
  new_game == "yes"
  tic_tac_toe = Game.new
  until tic_tac_toe.won?
    tic_tac_toe.play
  end
end
